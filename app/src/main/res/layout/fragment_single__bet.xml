<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bidding.example.com.bidding.Lottery_Game.Single_Bet"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"

        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        tools:ignore="NewApi"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:weightSum="4">
                <TextView
                    android:id="@+id/time_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="04:00"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            <TextView
                android:id="@+id/current_seesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Current Session:03:30 pm"
                android:textColor="@color/textColor"
                android:paddingLeft="5dp"
                android:gravity="left"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Last Result:"
                android:textColor="@color/textColor"
                android:paddingLeft="5dp"
                android:gravity="right"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/current_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text=""
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:textStyle="bold" />
        </LinearLayout>
        </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/final_result_tile_holder"
        android:layout_below="@+id/card_view1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--first digit single-->
    <LinearLayout
        android:id="@+id/single_tile_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/abc_action_bar_default_height_material"
        android:layout_marginRight="@dimen/abc_action_bar_default_height_material"
        android:layout_marginTop="@dimen/abc_button_padding_horizontal_material">
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_first_digit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                tools:ignore="NewApi"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/first_digit"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>


        <LinearLayout
        android:id="@+id/single_digit_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/single_tile_holder"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material"
        android:layout_marginRight="@dimen/abc_action_bar_content_inset_material"
        >



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/first_digit_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                tools:ignore="NewApi">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                >
                                <EditText
                                    android:id="@+id/edit_first_digit"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Enter Digit"
                                    android:gravity="center"
                                    android:textColor="@color/textColor"
                                    android:layout_gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"/>
                                <EditText
                                    android:id="@+id/edit_first_amount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="Enter Amount"
                                    android:gravity="center"
                                    android:textColor="@color/textColor"
                                    android:layout_gravity="center"
                                    android:inputType="number"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                >
                                <Button
                                    android:id="@+id/btn_first_place_bet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/place_bet"
                                    android:gravity="center"
                                    android:textColor="@color/textColor"
                                    android:layout_gravity="center"/>
                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:weightSum="2">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Return Amount:"
                                    android:gravity="right"
                                    android:textColor="@color/textColor"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    />
                                <TextView
                                    android:id="@+id/first_return_amount"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:hint="00"
                                    android:paddingLeft="5dp"
                                    android:textColor="@color/textColor"
                                    android:layout_weight="1"/>
                               </LinearLayout>
                            </LinearLayout>
                </LinearLayout>
        </android.support.v7.widget.CardView>

<!--second digit single-->
        <LinearLayout
            android:id="@+id/second_tile_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_first_digit"
            android:layout_marginLeft="@dimen/abc_action_bar_default_height_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_height_material"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            >
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_second_digit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                tools:ignore="NewApi"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/second_digit"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/second_digit_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            tools:ignore="NewApi">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <EditText
                        android:id="@+id/edit_second_digit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter Digit"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxLength="1"/>
                    <EditText
                        android:id="@+id/edit_second_digit_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter Amount"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_gravity="center"
                        android:inputType="number"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <Button
                        android:id="@+id/btn_second_place_bet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/place_bet"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Return Amount:"
                            android:gravity="right"
                            android:textColor="@color/textColor"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                    <TextView
                        android:id="@+id/return_second_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="00"
                        android:paddingLeft="5dp"
                        android:textColor="@color/textColor"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

<!--jodi double digit-->
        <LinearLayout
            android:id="@+id/jodi_tile_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_first_digit"
            android:layout_marginLeft="@dimen/abc_action_bar_default_height_material"
            android:layout_marginRight="@dimen/abc_action_bar_default_height_material"
            android:layout_marginTop="@dimen/abc_action_bar_default_padding_material"
            >
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_jodi_digit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                tools:ignore="NewApi"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/jodi_digit"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>
          </LinearLayout>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/jodi_digit_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            tools:ignore="NewApi">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    >
                    <EditText
                        android:id="@+id/edit_jodi_digit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter Digit"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:maxLength="2"/>
                    <EditText
                        android:id="@+id/edit_jodi_digit_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter Amount"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_gravity="center"
                        android:inputType="number"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_jodi_place_bet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/place_bet"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:hint="Return Amount:"
                            android:gravity="right"
                            android:textColor="@color/textColor"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                    <TextView
                        android:id="@+id/return_jodi_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="00"
                        android:paddingLeft="5dp"
                        android:textColor="@color/textColor"
                        android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
  </RelativeLayout>
</ScrollView>
    <!--final Result Holder textview-->
    <LinearLayout
        android:id="@+id/final_result_tile_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_final_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            tools:ignore="NewApi"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/textColor"
                android:layout_gravity="center"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="20dp"
