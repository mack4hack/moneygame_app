<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/abc_action_button_min_height_material"
    android:paddingBottom="@dimen/activity_vertical_margin"

    tools:showIn="@layout/activity_landing_screen"
    tools:context="bidding.example.com.bidding.LandingScreen">
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/abc_action_bar_content_inset_material"
        >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_stacked_tab_max_width"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        tools:ignore="NewApi">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@color/card_header"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/total_lottery_bet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total_bet"
                    android:textColor="@color/textColorWhite"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"/>
                <!--<TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total_bet"
                    android:textColor="@color/textColorWhite"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:visibility="gone"/>-->
            </LinearLayout>

            <TextView
                android:id="@+id/lottry_bet"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/Lottery"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/textColorWhite"
                android:layout_weight="2.4"
                android:background="@color/card_body"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@color/card_footer">
                <TextView
                    android:id="@+id/cardFooter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColorWhite"
                    android:text="Card Footer"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_stacked_tab_max_width"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        tools:ignore="NewApi">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:background="@color/card_header"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/total_cricket_bet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total_bet"
                    android:textColor="@color/textColorWhite"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"/>
                <!--<TextView
                    android:id="@+id/cricket_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total_bet"
                    android:textColor="@color/textColorWhite"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:visibility="gone"/>-->
            </LinearLayout>

            <TextView
                android:id="@+id/cricket_bet"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/Cricket"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/textColorWhite"
                android:layout_weight="2.4"
                android:background="@color/card_body"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@color/card_footer">
                <TextView
                    android:id="@+id/cricket_cardFooter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColorWhite"
                    android:text="Card Footer"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
</RelativeLayout>
