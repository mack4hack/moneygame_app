<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    tools:context="bidding.example.com.bidding.Cricket_Home"
    android:padding="@dimen/abc_action_bar_content_inset_material"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#fff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/bet"
                    android:scaleType="fitXY"
                    android:src="@drawable/orangeleaf" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bet"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="50dp"
                    android:textSize="16sp"
                    />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#fff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/history"
                    android:scaleType="fitXY"
                    android:src="@drawable/yellowleaf" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's \nHistory"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="40dp"
                    android:textSize="16sp"/>
           </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#fff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/accounts"
                    android:scaleType="fitXY"
                    android:src="@drawable/greenleaf" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Accounts"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="50dp"
                    android:textSize="16sp"/>
           </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#fff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/previous_game_rslt"
                    android:scaleType="fitXY"
                    android:src="@drawable/maroonleaf" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Results"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="50dp"
                    android:textSize="16sp"/>
         </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#fff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/upcoming"
                    android:scaleType="fitXY"
                    android:src="@drawable/orangeleaf" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Matches"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="50dp"
                    android:textSize="16sp"/>
           </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#fff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/cancel_bet"
                    android:scaleType="fitXY"
                    android:src="@drawable/yellowleaf" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel Bet"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="50dp"
                    android:textSize="16sp"/>
           </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#fff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/cnclld_bets"
                    android:scaleType="fitXY"
                    android:src="@drawable/greenleaf" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancelled Bets"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="50dp"
                    android:textSize="16sp"/>

          </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#fff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/score_crd"
                    android:scaleType="fitXY"
                    android:src="@drawable/maroonleaf" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Score Card"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="50dp"
                    android:textSize="16sp"/>
          </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>


